{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "target": "es5",
    "stripInternal": true,
    "rootDir": "./",
    "outDir": "../dist"
  },
  "angularCompilerOptions": {
    "genDir": "../dist",
    "skipTemplateCodegen": true
  }
}
